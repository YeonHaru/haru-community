@using System.Linq
@model IReadOnlyList<AdminUserViewModel>

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="mb-0">사용자 관리</h1>
    <a class="btn btn-secondary" asp-action="Index">대시보드로 돌아가기</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-light border">
        등록된 사용자가 없습니다.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">사용자명</th>
                        <th scope="col">이메일</th>
                        <th scope="col" class="text-center">이메일 인증</th>
                        <th scope="col" class="text-center">관리자</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">완료</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">미완료</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-warning text-dark">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted">User</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
