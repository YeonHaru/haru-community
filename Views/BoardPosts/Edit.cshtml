@model BoardPost

@{
    var createdAtText = Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm");
    var updatedAtText = Model.UpdatedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm");
    var boardName = ViewData["BoardName"] as string ?? "게시판";
}

<h1 class="mb-3">게시글 수정</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BoardId" />
    <input type="hidden" asp-for="AuthorId" />
    <input type="hidden" asp-for="AuthorName" />
    <input type="hidden" asp-for="CreatedAt" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">게시판</label>
        <input class="form-control" value="@boardName" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">작성자</label>
        <input class="form-control" value="@Model.AuthorName" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">작성일</label>
        <input class="form-control" value="@createdAtText" disabled />
    </div>

    @if (!string.IsNullOrWhiteSpace(updatedAtText))
    {
        <div class="mb-3">
            <label class="form-label">최근 수정</label>
            <input class="form-control" value="@updatedAtText" disabled />
        </div>
    }

    <div class="d-flex justify-content-between">
        <a asp-action="Index" asp-route-boardId="@Model.BoardId" class="btn btn-link">목록으로</a>
        <button type="submit" class="btn btn-primary">저장</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
