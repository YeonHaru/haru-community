@using Microsoft.AspNetCore.Identity
@using haru_community.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="auth-links d-flex align-items-center gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <a id="manage" class="btn btn-outline-secondary btn-sm" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        @UserManager.GetUserName(User) 프로필
    </a>
    <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="btn btn-link btn-sm text-decoration-none text-secondary">로그아웃</button>
    </form>
}
else
{
    <a class="btn btn-outline-secondary btn-sm" id="register" asp-area="Identity" asp-page="/Account/Register">회원가입</a>
    <a class="btn btn-primary btn-sm" id="login" asp-area="Identity" asp-page="/Account/Login">로그인</a>
}
</div>
